<!DOCTYPE html>
<html lang="en">
  <% include partials/head %>
  <body>
    <% include partials/topbar %>
    <div class="section">
      <div class="container">
        <div class="columns is-centered">
          <div class="column is-half">
            <div class="card is-shadowless">
              <div class="card-image is-hidden">
                <figure class="image is-1by1">
                  <img class="is-rounded" src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                </figure>
              </div>
              <div class="card-content">
                <div class="media">
                  <div class="media-content">
                    <p class="title is-3"><%= user.first_name + ' ' + user.last_name %></p>
                    <% if (userIsOrganizer) { %>
                    <p class="subtitle is-4">
                    <span class="tag is-primary">
                      <span class="icon is-small">
                        <i class="fa fa-star"></i>
                      </span>&nbsp;
                      Organizer
                    </span>
                    </p>
                    <% } %>
                  </div>
                </div>
                <div class="content">
                  <div>
                    <p class="subtitle has-text-grey is-6">
                    Member Since
                    </p>
                    <p class="title is-4">
                    <%= moment(user.created_at).format('MMMM D, YYYY') %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
