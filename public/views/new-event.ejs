<!DOCTYPE html>
<html lang="en">
  <% include partials/head %>
  <body>
    <% include partials/topbar %>
    <div class="section">
      <div class="container">
        <p class="title">New Event</p>
        <form method="post" id="new-event-form">
          <div class="field">
            <label class="label">Name</label>
            <div class="control">
              <input class="input" type="text" name="eventname" required>
            </div>
          </div>
          <div class="field">
            <label class="label">Description</label>
            <div class="control">
              <textarea class="textarea" name="eventdescription"></textarea>
            </div>
          </div>
          <div class="field">
            <label class="label">Start</label>
            <div class="control">
              <input class="input" type="text" name="eventstart" required>
            </div>
          </div>
          <div class="field">
            <label class="label">End</label>
            <div class="control">
              <input class="input" type="text" name="eventend" required>
            </div>
          </div>
          <div class="field">
            <label class="label">Location</label>
            <div class="control">
              <input class="input" type="text" name="eventlocation" required>
            </div>
          </div>
          <div class="control">
            <button class="button is-primary" type="submit">Create</button>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
