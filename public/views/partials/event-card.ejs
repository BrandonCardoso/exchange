<div class="card">
  <div class="card-content">
    <div class="content">
      <div class="level is-marginless">
        <div class="level-left">
          <a href="/event/<%= event.event_id %>/<%= event.urlSafeName %>">
            <h3 class="subtitle is-7 has-text-grey">
              <%= moment(event.start_time).format('h:mm A') %><span class="is-hidden">'</span>
            </h3>
            <h1 class="title is-5"><%= event.name %></h1>
            <h3 class="subtitle is-7 has-text-grey"><%= event.location.address + (event.location.room ? '  -  Room: ' + event.location.room:'') %></h3>
          </a>
        </div>
        <div class="level-right is-marginless">
          <div class="level-item tags">
            <span class="tag is-light"> <%= event.numParticipants %> <%= event.numParticipants === 1 ? 'person' : 'people' %> going</span>
            <% if (event.userIsParticipating) { %>
            <span class="tag is-success">You're going!</span>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    <p><%= event.description %></p>
  </div>
</div>
