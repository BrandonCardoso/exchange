<div class="card">
  <div class="card-content">
    <div class="content">
      <div class="level is-marginless is-mobile">
        <div class="level-left">
          <a href="/event/<%= event.event_id %>">
            <h3 class="subtitle is-7 has-text-grey">
              <%= moment(event.start_time).format('h:mm A') %>
            </h3>
            <h1 class="title is-5"><%= event.name %></h1>
            <h3 class="subtitle is-7 has-text-grey"><%= event.location %></h3>
          </a>
        </div>
        <div class="level-right">
          <div class="level-item">
            <span class="title is-7 has-text-success is-uppercase">Going!</span>
            &nbsp;
            <span class="icon is-medium">
              <i class="far fa-2x fa-check-circle has-text-success"></i>
            </span>
          </div>
        </div>
      </div>
      <p><%= event.description %></p>
    </div>
  </div>
</div>
